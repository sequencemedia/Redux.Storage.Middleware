{
  "name": "redux-storage-middleware",
  "version": "0.0.12",
  "description": "Redux Storage middleware",
  "main": "./index.js",
  "scripts": {
    "prepublishOnly": "npm run clean && npm run babel",
    "clean": "rm -rf lib",
    "babel": "babel src -d lib",
    "build": "npm run babel --",
    "build:watch": "npm run build -- -w",
    "lint": "eslint *.js src config/mocha",
    "lint:fix": "npm run lint -- --fix",
    "test": "nyc mocha config/mocha --require @babel/register"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/sequencemedia/redux-storage-middleware.git"
  },
  "license": "MIT",
  "author": "Jonathan Perry for Sequence Media Limited",
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "reporter": [
      "html"
    ],
    "report-dir": "config/coverage"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/plugin-proposal-export-default-from": "^7.2.0",
    "@babel/preset-env": "^7.4.4",
    "@babel/register": "^7.4.4",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.6",
    "babel-plugin-module-resolver": "^3.2.0",
    "chai": "^4.1.2",
    "core-js": "^3.1.2",
    "eslint": "^5.16.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-import-resolver-babel-module": "^5.1.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-node": "^9.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^2.3.0",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "redux": "^4.0.0",
    "redux-mock-store": "^1.5.3",
    "sinon": "^6.0.0",
    "sinon-chai": "^3.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:fix && npm run clean && npm run babel && git add lib"
    }
  }
}
